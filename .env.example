# Money Mood Environment Configuration
# Copy this file to .env and fill in your actual values

# App Configuration
EXPO_PUBLIC_APP_NAME=Money Mood
EXPO_PUBLIC_APP_VERSION=2.0.0
EXPO_PUBLIC_API_URL=https://api.moneymood.app

# Plaid Configuration
PLAID_CLIENT_ID=your_plaid_client_id_here
PLAID_SECRET=your_plaid_secret_here
PLAID_ENV=sandbox  # sandbox, development, or production
PLAID_WEBHOOK_URL=https://your-webhook-url.com/plaid/webhook

# Yodlee Configuration (Optional - for international support)
YODLEE_CLIENT_ID=your_yodlee_client_id_here
YODLEE_SECRET=your_yodlee_secret_here
YODLEE_ENV=sandbox  # sandbox or production

# Security Configuration
ENCRYPTION_KEY=your_32_character_encryption_key_here
JWT_SECRET=your_jwt_secret_key_here
SESSION_TIMEOUT=30m

# Database Configuration (Production)
DATABASE_URL=postgresql://username:password@host:port/database
DATABASE_SSL=true
DATABASE_ENCRYPTION=AES-256

# Redis Configuration (Production)
REDIS_URL=redis://username:password@host:port
REDIS_SSL=true

# Monitoring & Analytics
ERROR_TRACKING_DSN=your_sentry_dsn_here
ANALYTICS_API_KEY=your_analytics_key_here
LOG_LEVEL=info  # debug, info, warn, error

# Feature Flags
ENABLE_BIOMETRIC_AUTH=true
ENABLE_REAL_TIME_SYNC=true
ENABLE_FACIAL_EXPRESSIONS=true
ENABLE_SECURITY_MONITORING=true
ENABLE_AUDIT_LOGGING=true

# Development Settings
DEBUG_MODE=false
MOCK_FINANCIAL_DATA=true  # Set to false for production
SKIP_BIOMETRIC_AUTH=false  # Set to true for testing
ENABLE_DEBUG_LOGS=false

# Compliance Settings
PCI_COMPLIANCE_MODE=true
GDPR_COMPLIANCE_MODE=true
CCPA_COMPLIANCE_MODE=true
AUDIT_RETENTION_DAYS=2555  # 7 years for financial data

# Webhook Configuration
WEBHOOK_SECRET=your_webhook_secret_here
WEBHOOK_TIMEOUT=30000  # 30 seconds

# Rate Limiting
API_RATE_LIMIT=1000  # requests per hour per user
SYNC_RATE_LIMIT=100   # sync requests per hour per user

# Backup Configuration
BACKUP_ENCRYPTION_KEY=your_backup_encryption_key_here
BACKUP_RETENTION_DAYS=90
BACKUP_FREQUENCY=daily

# Notification Configuration
PUSH_NOTIFICATION_KEY=your_push_notification_key_here
EMAIL_SERVICE_API_KEY=your_email_service_key_here
SMS_SERVICE_API_KEY=your_sms_service_key_here

# Third-party Integrations
CURRENCY_API_KEY=your_currency_api_key_here
FRAUD_DETECTION_API_KEY=your_fraud_detection_key_here
CREDIT_SCORE_API_KEY=your_credit_score_key_here

